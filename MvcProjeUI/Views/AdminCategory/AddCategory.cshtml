@model EntityLayer.Concrete.Category
@{
        ViewBag.Title = "AddCategory";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Ekleme Sayfası</h2>

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategory Adı: ")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-group" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-group" })
        @Html.ValidationMessageFor(x => x.CategoryDescription)
        <button>Kaydet</button>
    </div>
}

